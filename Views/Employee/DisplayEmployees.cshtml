@model IEnumerable<Microsoft_Employee_CRUD_Microservice.Models.Domain.Employee>

@{
}

<div class="mt-2" style="width:50%">
   <div class="row">
        <h2>Employee</h2>
       <div class="col-md-4">
            <a href="/Employee/AddEmployee" class="btn btn-primary">Add Employee</a>
       </div>
       <table class="table table-striped">
           <thead>
               <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Action</th>
               </tr>

                @foreach(var employee in Model)
                {
                   <tr>
                    <td>
                        @employee.Name
                    </td>
                    <td>@employee.Email</td>
                    <td>
                            <a class="btn btn-success" href="/Employee/EditEmployee?id=@employee.Id">Edit</a>
                            <a class="btn btn-danger" href="/Employee/DeleteEmployee?id=@employee.Id">Delete</a>
                    </td>
               </tr> 
                }
           </thead>
       </table>
   </div>

</div>
